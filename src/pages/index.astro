---
import { getCollection } from "astro:content";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";
import TypedBlogPost from "src/components/TypedBlogPost.astro";

// Blog File System
// import BlogPost from "../components/BlogPost.astro"s
// const posts = await Astro.glob('./posts-old/*.{md,mdx}')

// Usando Collections ** NEW **
const blogPosts = await getCollection("blog");
---

<MainLayout title="Home | Astro Blog">
    <!-- component -->
    <section class="bg-gray-900">
        <div class="container px-6 py-10 mx-auto">
            <h1
                class="text-3xl font-semibold capitalize lg:text-4xl text-white"
            >
                {siteConfig.title}
            </h1>
            <hr />

            <!-- Collection Blog -->
            <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
                {blogPosts.map((post) => <TypedBlogPost post={post} />)}
            </div>

            <!-- Blog File System -->
